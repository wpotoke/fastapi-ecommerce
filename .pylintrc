[MASTER]
ignore=venv
jobs=1
persistent=yes
ignore=app/migrations

[MESSAGES CONTROL]
disable =
    missing-docstring,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    singleton-comparison

[FORMAT]
max-line-length=100

[DESIGN]
max-args=5
max-locals=15

[REPORTS]
output-format = colorized